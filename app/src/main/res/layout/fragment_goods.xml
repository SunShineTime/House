<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/goods_height"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/fragment_goods_image_right"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@mipmap/icon_goods_category"/>
    <EditText
        android:id="@+id/fragment_goods_edt"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/abc_ic_search_api_holo_light"
        android:background="#e9e0e9"
        android:hint="软装设计"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/fragment_goods_image_left"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@mipmap/icon_message_black"/>
</LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/fragment_goods_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>