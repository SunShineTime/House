<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/fragment_goods_listview_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/goods_height"
        android:text="新特卖·每天早上10点上新"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>
<ImageView
    android:id="@+id/fragment_goods_listview_image"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:id="@+id/fragment_goods_listview_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/goods_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment_goods_listview_text_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="#ff0000"
            android:text="8折起"/>
        <TextView
            android:id="@+id/fragment_goods_listview_text_title"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="标题"/>
        <TextView
            android:id="@+id/fragment_goods_listview_text_time"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_time_home"
            android:gravity="center_vertical"
            android:text="剩余15天"/>
    </LinearLayout>
</LinearLayout>