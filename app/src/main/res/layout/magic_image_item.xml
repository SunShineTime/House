<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/magic_image_item_img"
        android:layout_width="match_parent"
        android:src="@mipmap/icon_loading_item"
        android:layout_height="@dimen/magic_image_item_height"/>

<TextView
    android:id="@+id/magic_image_item_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:textColor="#5b5b5b"
    android:textSize="18sp"
    android:text="@string/magic_title"
    android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/magic_image_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#b1afaf"
        android:textSize="16sp"
        android:text="@string/magic_title"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="10dp"
        android:background="#c8f4f3f3"/>
</LinearLayout>