<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/child_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/child_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大发生地方撒的发生都发生发说的发生地方"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="12dp"
            android:text="￥"/>
        <TextView
            android:id="@+id/child_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="12dp"
            android:text="1430"/>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/child_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bian"
                android:textSize="12sp"
                android:text="￥"/>
            <TextView
                android:id="@+id/child_item_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/child_money"
                android:textColor="@color/bian"
                android:textSize="12sp"
                android:text="1788"/>
            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/bian"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

        <TextView
            android:id="@+id/child_item_zhekou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="8折"/>

    </LinearLayout>

</LinearLayout>