<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:CircleIndicator="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<com.qianfeng.housefinish.lunbo.AutoScrollViewPager
    android:id="@+id/fragment_goods_viewpager"
    android:layout_width="match_parent"
    android:layout_height="180dp">

</com.qianfeng.housefinish.lunbo.AutoScrollViewPager>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="15dp">
        <com.qianfeng.housefinish.CircleIndicator
            android:id="@+id/goods_header_indicator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            CircleIndicator:ci_margin="10dp"
            CircleIndicator:ci_radius="10dp"
            CircleIndicator:ci_gravity="center"
            CircleIndicator:ci_mode="outside"
            CircleIndicator:ci_selected_background="@color/green"
            CircleIndicator:ci_background="@android:color/white"
            />
    </LinearLayout>

</RelativeLayout>