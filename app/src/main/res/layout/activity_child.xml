<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianfeng.housefinish.ui.ChildActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/child_activity_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ease_mm_title_back" />

        <EditText
            android:id="@+id/child_activity_edittext"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="30dp"
            android:focusable="false"
            android:drawableLeft="@mipmap/abc_ic_search_api_holo_light"
            android:hint="软装设计"
            android:paddingLeft="20dp"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_pressed"/>

        <TextView
            android:id="@+id/child_activity_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="搜索"/>

    </LinearLayout>


    <com.qianfeng.housefinish.utils.PullToRefreshRecyclerView
        android:id="@+id/child_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
