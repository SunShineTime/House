<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    tools:context="com.qianfeng.housefinish.ui.GoodsEnterActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_height"
        android:elevation="@dimen/elevation_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/day_day_enter_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_back_gary"
            android:background="@color/white"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="@string/enter"
            android:gravity="center"
            android:layout_gravity="center"/>
    </android.support.design.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_login_account"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:hint="手机/邮箱"
            android:textSize="12sp"
            android:padding="10dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="10dp">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_login_psd"/>
    <EditText
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:textSize="12sp"
        android:padding="10dp"/>
</LinearLayout>

    <Button
        android:id="@+id/my_login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn_denglu"
        android:textColor="@color/white"
        android:text="登录"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/my_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="新用户注册"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="|"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="忘记密码？"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="1dp"
            android:background="#d6d6d0"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="第三方登录"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="1dp"
            android:background="#d6d6d0"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">
    <TextView
    android:id="@+id/my_taobao"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:drawableTop="@mipmap/icon_login_taobao"
    android:gravity="center"
    android:text="淘宝"/>
    <TextView
        android:id="@+id/my_weixin"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/icon_login_weixin"
        android:gravity="center"
        android:text="微信"/>
    <TextView
        android:id="@+id/my_qq"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/icon_login_qq"
        android:gravity="center"
        android:text="QQ"/>
    <TextView
        android:id="@+id/my_weibo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/icon_login_weibo"
        android:gravity="center"
        android:text="新浪"/>
</LinearLayout>
</LinearLayout>
