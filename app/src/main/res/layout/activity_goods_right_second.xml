<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.housefinish.ui.GoodsRightSecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <RadioGroup
            android:id="@+id/goods_left_rb_radiogroup"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:background="#f4f6f6"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/goods_left_rb_jj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="家具"
                android:gravity="center"
                android:checked="true"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />
            <RadioButton
                android:id="@+id/goods_left_rb_js"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="家饰"
                android:gravity="center"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />
            <RadioButton
                android:id="@+id/goods_left_rb_jf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="家纺"
                android:gravity="center"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />
            <RadioButton
                android:id="@+id/goods_left_rb_sn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="收纳"
                android:gravity="center"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />

            <RadioButton
                android:id="@+id/goods_left_rb_ms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="美食"
                android:gravity="center"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />
            <RadioButton
                android:id="@+id/goods_left_rb_qj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="清洁"
                android:gravity="center"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />
            <RadioButton
                android:id="@+id/goods_left_rb_yh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="养护"
                android:gravity="center"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />

            <RadioButton
                android:id="@+id/goods_left_rb_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="餐厨"
                android:gravity="center"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />

            <RadioButton
                android:id="@+id/goods_left_rb_sj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="设计"
                android:gravity="center"
                android:textColor="@drawable/rg_text_color"
                android:background="@drawable/rg_bg"
                />
        </RadioGroup>

        <GridView
            android:id="@+id/goods_left_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            />

    </LinearLayout>


</LinearLayout>
